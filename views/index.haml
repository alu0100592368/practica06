!!!
%html{lang: "es"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{charset: "utf-8"}/
    %title Piedra-Papel-Tijera App
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %meta{content: "Practica 4 SYTW", name: "description"}/
    %meta{content: "Diego Williams Aguilar Montaño", name: "author"}/
    / Bootstrap
    %link{href: "public/assets/css/bootstrap.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/bootstrap-responsive.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/estilo.css", rel: "stylesheet"}/
    %link{href: "public/assets/css/font-awesome.min.css", rel: "stylesheet"}/
    / Touch icons
    %link{href: "public/assets/ico/favicon.ico", rel: "shortcut icon"}/
    %link{href: "public/assets/ico/apple-touch-icon-144-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "144x144"}/
    %link{href: "public/assets/ico/apple-touch-icon-114-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "114x114"}/
    %link{href: "public/assets/ico/apple-touch-icon-72-precomposed.png", rel: "apple-touch-icon-precomposed", sizes: "72x72"}/
    %link{href: "public/assets/ico/apple-touch-icon-57-precomposed.png", rel: "apple-touch-icon-precomposed"}/
  %body{"data-spy" => "scroll", "data-target" => ".top-spy"}
    / HEADER
    %header#head-top
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", type: "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand{href: "#head-top"}
              %i.icon-github-sign.icon-x3
              PIEDRA PAPEL Y TIJERA
            .nav-collapse.collapse.top-spy
              %ul#topnav.nav
                %li.active
                  %a{href: "#head-top"} Home
                %li
                  %a{href: "#Section-1"} Jugar
                %li
                  %a{href: "#Section-2"} Estadísticas
                %li
                  %a{href: "#Section-3"} Reglas del juego
                %li
                  %a{href: "#foot-sec"} Repositorio de la app
            / /.nav-collapse
      / Vista principal con slider
      .hero-unit
        .container
          #myCarousel.carousel.slide
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
              %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
            / Carousel items
            .carousel-inner
              .active.item
                .row
                  .span5.offset2.text-right{style: "padding-top:40px; "}
                    %h1 Bienvenido a Piedra Papel y Tijera
                    %p.lead
                      %br/
                      ¡Intenta ganar a la máquina!
                  .span4.text-center
                    %img{alt: "Imagen Piedra Papel Tijeras", src: "public/images/rps.jpg"}/
              .item
                .row
                  .span4.offset1.text-center
                    %img{alt: "Imagen Piedra Papel Tijeras", src: "public/images/rps.jpg"}/
                  .span5{style: "padding-top:40px; "}
                    %h1 SISTEMAS Y TECNOLOGÍAS WEB
                    %p.lead
                      %br/
                      Práctica 6: Despliegue en Heroku
                      %br/
                      Autor: Diego Williams Aguilar Montaño
            / Carousel nav
            %a.carousel-control.left{"data-slide" => "prev", href: "#myCarousel"}
              %i.icon-chevron-left
            %a.carousel-control.right{"data-slide" => "next", href: "#myCarousel"}
              %i.icon-chevron-right
      / GO BTN WRAPPER
      .gobtnwrapper
        %a.gobtn{href: "#Section-1"}
          %i.icon-chevron-down.icon-large
      / /GO BTN WRAPPER
    / / HEADER
    - if !player_throw
      / SECTION-1
      %section#Section-1
        / GO BTN WRAPPER
        .gobtnwrapper
          %a.gobtn{href: "#Section-2"}
            %i.icon-chevron-down.icon-large
        / /GO BTN WRAPPER
        .container
          .row
            .span12.page-header.text-center
              %h3= answer
              %br/
          %br/
          %br/
          %br/
          .row-fluid
            .span4.text-center.box
              %div
                %img{alt: "Icono Piedra", src: "public/images/rock-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Piedra#Section-1'} PIEDRA
            .span4.text-center.box
              %div
                %img{alt: "Icono Papel", src: "public/images/paper-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Papel#Section-1'} PAPEL
            .span4.text-center.box
              %div
                %img{alt: "Icono Tijera", src: "public/images/scissor-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Tijera#Section-1'} TIJERA
        / / CONTAINER
      / / SECTION-1
    - else
      / SECTION-1
      %section#Section-1
        / GO BTN WRAPPER
        .gobtnwrapper
          %a.gobtn{href: "#Section-2"}
            %i.icon-chevron-down.icon-large
        / /GO BTN WRAPPER
        .container
          .row
            .span12.page-header.text-center
              %h2 Elección de la máquina: #{computer_throw}
              %br/
              %h2 Tu elección: #{player_throw}
              %br/
              %h2= answer
          .row-fluid
            .span4.text-center.box
              %div
                %img{alt: "Icono Piedra", src: "public/images/rock-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Piedra'} PIEDRA
            .span4.text-center.box
              %div
                %img{alt: "Icono Papel", src: "public/images/paper-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Papel'} PAPEL
            .span4.text-center.box
              %div
                %img{alt: "Icono Tijera", src: "public/images/scissor-icon.png"}/
              %br/
              %p
                %a.btn.btn-large{:href => '?choice=Tijera'} TIJERA
        / / CONTAINER
      / / SECTION-1
    / SECTION-2
    %section#Section-2
      / GO BTN WRAPPER
      .gobtnwrapper
        %a.gobtn{href: "#Section-3"}
          %i.icon-chevron-down.icon-large
      / /GO BTN WRAPPER
      .container
        .row
          .span12.page-header.text-center
            %h3 Estadísticas del juego para las tiradas del jugador
            %p.lead
        .row
          .span12.page-header.text-center
            %h3 
              Victorias:
              = tiradas['Victorias']
            %h3
              Empates:
              = tiradas['Empates']
            %h3
              Derrotas:
              = tiradas['Derrotas']
      / / CONTAINER
    / / SECTION-2
    / SECTION-3
    %section#Section-3
      / GO BTN WRAPPER
      .gobtnwrapper
        %a.gobtn{href: "#foot-sec"}
          %i.icon-chevron-down.icon-large
      / /GO BTN WRAPPER
      .container
        .row
          .span12.page-header.text-center
            %h3 Reglas del juego
            %p.lead
        %br/
        %br/
        .row
          .span4.text-center
            %a
              %img{src: "public/images/reglas.jpg"}/
          .span8
            %h3 Objetivo:
            %p.lead
              El objetivo es vencer a la máquina seleccionando el arma que gana a la que ha elegido la máquina, siguiendo estas reglas:
              %br/
              \- La piedra aplasta o rompe la tijera (gana la piedra)
              %br/
              \- La tijera corta el papel (gana la tijera)
              %br/
              \- El papel envuelve la piedra (gana el papel)
              %br/
              Si los jugadores eligen la misma arma es un empate y se juega otra vez.
        %hr/
      / / CONTAINER
    / / SECTION-3
    / FOOTER
    %footer#foot-sec
      .container
        .row-fluid
          .span12.page-header.text-center
            %h3 Enlace al repositorio GitHub de la aplicación
          %hr/
        .row-fluid
          .span8.offset3
            .circ-wrap
              %a{href: ""}
                %i
            .circ-wrap
              %a{href: ""}
                %i
            .circ-wrap
              %a{href: "https://github.com/alu0100592368/practica06", target: "_blank"}
                %i.icon-github.icon-4x
            .circ-wrap
              %a{href: ""}
                %i
            .circ-wrap
              %a{href: ""}
                %i
        .row-fluid
          %hr/
          .span12.text-center
            %p © 2013 Sistemas y Tecnologías Web - Diego Williams Aguilar Montaño
    / / FOOTER
    / Javascript
    / Puesto al final del documento para que las paginas cargen mas rapido
    %script{src: "public/assets/js/jquery.js", type: "text/javascript"}
    %script{src: "public/assets/js/bootstrap.min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.parallax-1.1.3.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.localscroll-1.2.7-min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.scrollTo.min.js", type: "text/javascript"}
    %script{src: "public/assets/js/jquery.nicescroll.min.js", type: "text/javascript"}
    :javascript
      jQuery(document).ready(function(){
        jQuery('#topnav').localScroll(3000);
        jQuery('.gobtnwrapper').localScroll(3000);
        jQuery('.well').parallax("50%", 0.1);
      })
    / NICE Scroll plugin
    :javascript
      jQuery(document).ready(function(){  
        jQuery("html").niceScroll({cursorcolor:"#ffffff"});
      });
    :javascript
      jQuery('.nav-collapse .nav > li > a').click(function(){
        jQuery('.collapse.in').removeClass('in').css('height', '0');
      });
    :javascript
      jQuery('.carousel').carousel({
        interval: 7000
      })